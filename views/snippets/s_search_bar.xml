<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define your custom snippet template -->
        <template id="filter_product_option" name="Product Filter Bar">
            <section class="pt40 pb49">
                <div class="container">
                    <h1 class="text-center">
                        Filter Products
                    </h1>
                    <form action="/shop/filter" method="get" class="text-center">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <select name="category" class="form-control mb-3">
                                    <option value="">Select Category</option>
                                    <!-- You will need to populate these options dynamically -->
                                    <t t-foreach="request.env['product.category'].search([])" t-as="category">
                                        <option t-att-value="category.id">
                                            <t t-esc="category.name"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <select name="type" class="form-control mb-3">
                                    <option value="">Select Type</option>
                                    <!-- Populate types dynamically -->
                                    <t t-foreach="request.env['product.template'].search([]).mapped('type')" t-as="type">
                                        <option t-att-value="type">
                                            <t t-esc="type"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <input type="text" name="name" placeholder="Product Name" class="form-control mb-3"/>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">Filter</button>
                    </form>
                </div>
            </section>
        </template>

        <template id="snippets" inherit_id="website.snippets">
            <xpath expr="//t[@t-snippet='website.s_banner']" position="before">
                <t t-snippet="web_blocks.filter_product_option" string="Filter Product"/>
            </xpath>
        </template>
    </data>
</odoo>

<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Define your custom snippet template -->
        <template id="search_product_option" name="Product Search Bar">
            <section class="pt40 pb49">
                <div class="container">
                    <h1 class="text-center">
                        Hello World
                    </h1>
                </div>
            </section>
        </template>
        <template id="snippets" inherit_id="website.snippets">
            <xpath expr="//t[@t-snippet='website.s_banner']" position="before">
                <t t-snippet="web_blocks.search_product_option" string="Search Product"/>
            </xpath>
        </template>
    </data>
</odoo>
